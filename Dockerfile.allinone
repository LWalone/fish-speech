FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    ffmpeg \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy application files
COPY unified_server.py gpu_manager.py mcp_server.py ./
COPY fish_speech ./fish_speech/
COPY tools ./tools/
COPY .locale .project-root ./

# Install Python dependencies
RUN pip install --no-cache-dir \
    torch==2.5.1 \
    torchaudio==2.5.1 \
    transformers \
    fastapi \
    uvicorn \
    gradio \
    soundfile \
    numpy \
    pyrootutils \
    hydra-core \
    loguru \
    einops \
    librosa \
    tiktoken \
    pydantic \
    python-multipart \
    fastmcp \
    requests \
    descript-audio-codec \
    descript-audiotools \
    natsort \
    resampy \
    silero-vad \
    ormsgpack \
    cachetools \
    opencc-python-reimplemented \
    lightning \
    loralib \
    zstandard \
    pydub \
    modelscope \
    einx[torch]==0.2.2 \
    openai-whisper

ENV PYTHONPATH=/app

EXPOSE 7864

HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:7864/health || exit 1

CMD ["python", "unified_server.py", "--port", "7864", "--device", "cuda"]
